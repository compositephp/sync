{
    "name": "compositephp/sync",
    "description": "PHP 8.1+ SQL Database Migrations and schema synchronisation",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Composite PHP",
            "email": "compositephp@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "compositephp/db": "^0.4.0",
        "iamcal/sql-parser": "^0.4.0",
        "nette/php-generator": "^4.0",
        "symfony/console": "2 - 6",
        "laminas/laminas-file": "^2.12",
        "doctrine/inflector": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Composite\\Sync\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Composite\\Sync\\Tests\\": "tests/"
        }
    }
}
